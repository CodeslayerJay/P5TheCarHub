@model VehicleFormModel
@{
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="pt-5">
    <h4 class="text-center">Manage Vehicle</h4>

    <div class="row pt-2">
        <div class="col-10 m-auto">
            <form method="post" asp-action="Save" asp-controller="Vehicle">
                <input asp-for="VehicleId" type="hidden" />

                
                <div class="card p-3">
                    <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">
                        <div class="form-row">
                            <div class="col-9">
                                <h5 class="text-muted pt-1 pb-3">Vehicle Information</h5>
                            </div>
                            <div class="col-3 float-right">
                                <p class="text-muted">* - denotes required fields.</p>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label asp-for="Year" class="col-form-label">Year*</label>
                                <input asp-for="Year" class="form-control form-control-sm" maxlength="4" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Make" class="col-form-label">Make*</label>
                                <input asp-for="Make" class="form-control form-control-sm" />
                                <span asp-validation-for="Make" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Model" class="col-form-label">Model*</label>
                                <input asp-for="Model" class="form-control form-control-sm" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Trim" class="col-form-label">Trim</label>
                                <input asp-for="Trim" class="form-control form-control-sm" />
                                <span asp-validation-for="Trim" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label asp-for="VIN" class="col-form-label">VIN</label>
                                <input asp-for="VIN" class="form-control form-control-sm" />
                                <span asp-validation-for="VIN" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Mileage" class="col-form-label">Mileage</label>
                                <input asp-for="Mileage" class="form-control form-control-sm" />
                                <span asp-validation-for="Mileage" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="Color" class="col-form-label">Color</label>
                                <input asp-for="Color" class="form-control form-control-sm" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label asp-for="PurchasePrice" class="col-form-label">Purchase Price*</label>
                                <input asp-for="PurchasePrice" class="form-control form-control-sm" />
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="PurchaseDate" class="col-form-label">Purchase Date*</label>
                                <input asp-for="PurchaseDate" class="form-control form-control-sm" type="date" />
                                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="LotDate" class="col-form-label">Lot Date*</label>
                                <input asp-for="LotDate" class="form-control form-control-sm" type="date" />
                                <span asp-validation-for="LotDate" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />
                        <div class="form-row">
                            <div class="form-group col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="addRepairOption" asp-for="AddRepairOption">
                                    <label class="form-check-label" for="addRepairOption">
                                        Vehicle has repair(s)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-12">
                                <button type="submit" class="btn btn-primary">Save Vehicle</button>
                                @if (Model.VehicleId == 0)
                                {
                                    <a asp-controller="Vehicle" asp-action="Index" class="btn">Cancel</a>
                                }
                                else
                                {
                                    <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@Model.VehicleId" class="btn">Cancel</a>
                                }
                            </div>
                        </div>
                    </div>

                </div>


            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}