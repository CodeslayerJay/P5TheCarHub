@model CarFormModel
@{
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="pt-5">
    <h4 class="text-center">Add Vehicle</h4>

    <div class="row pt-1">
        <div class="col-10 m-auto">
            <form method="post" asp-action="Create" asp-controller="Cars" enctype="multipart/form-data">

                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="main-tab" data-toggle="tab" href="#main" role="tab" aria-controls="main" aria-selected="true">Vehicle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="photos-tab" data-toggle="tab" href="#photos" role="tab" aria-controls="Photos" aria-selected="false">Upload Photo</a>
                    </li>
                </ul>
                <div class="tab-content card p-3" id="myTabContent">
                    <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">
                        <div class="form-row">
                            <div class="col-9">
                                <h5 class="text-muted pt-1 pb-3">Vehicle Information</h5>
                            </div>
                            <div class="col-3 float-right">
                                <p class="text-muted">* - denotes required fields.</p>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label asp-for="Year" class="col-form-label">Year*</label>
                                <input asp-for="Year" class="form-control form-control-sm" maxlength="4" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Make" class="col-form-label">Make*</label>
                                <input asp-for="Make" class="form-control form-control-sm" />
                                <span asp-validation-for="Make" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Model" class="col-form-label">Model*</label>
                                <input asp-for="Model" class="form-control form-control-sm" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Trim" class="col-form-label">Trim*</label>
                                <input asp-for="Trim" class="form-control form-control-sm" />
                                <span asp-validation-for="Trim" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label asp-for="VIN" class="col-form-label">VIN*</label>
                                <input asp-for="VIN" class="form-control form-control-sm" />
                                <span asp-validation-for="VIN" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Mileage" class="col-form-label">Mileage*</label>
                                <input asp-for="Mileage" class="form-control form-control-sm" />
                                <span asp-validation-for="Mileage" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="Color" class="col-form-label">Color</label>
                                <input asp-for="Color" class="form-control form-control-sm" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Type" class="col-form-label">Type</label><br />
                                <select asp-for="Type" asp-items="Html.GetEnumSelectList<CarType>()" class="form-control-sm"></select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label asp-for="PurchasePrice" class="col-form-label">Purchase Price*</label>
                                <input asp-for="PurchasePrice" class="form-control form-control-sm" />
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="PurchaseDate" class="col-form-label">Purchase Date*</label>
                                <input asp-for="PurchaseDate" class="form-control form-control-sm" type="date" />
                                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="LotDate" class="col-form-label">Lot Date*</label>
                                <input asp-for="LotDate" class="form-control form-control-sm" type="date" />
                                <span asp-validation-for="LotDate" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />
                        <div class="form-row">
                            <div class="form-group col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="addRepairOption" asp-for="AddRepairOption">
                                    <label class="form-check-label" for="addRepairOption">
                                        Add repair entry to vehicle
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-12">
                                <button type="submit" class="btn btn-primary">Save Vehicle</button>
                                <a asp-controller="Cars" asp-action="Index" class="btn">Cancel</a>
                            </div>
                        </div>
                    </div>


                    <!-- Photos -->
                    <div class="tab-pane fade" id="photos" role="tabpanel" aria-labelledby="photos-tab">
                        <div class="form-row">
                            <div class="col-9">
                                <h5 class="text-muted pt-1 pb-3">Upload Photo</h5>
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-7">
                                <div class="img-thumbnail" style="display: none;">
                                    <img id="imgThumbnail" />
                                </div>

                                <div class="custom-file" style="cursor: pointer;">
                                    <input type="file" class="custom-file-input" id="vehicleImage" name="Photo">
                                    <label class="custom-file-label" for="vehicleImage">Choose Image</label>
                                </div>
                                <p class="text-muted pt-1">
                                    *Image format: .jpg, .jpeg, .png
                                    <span asp-validation-for="Photo" class="text-danger ml-3"></span>
                                </p>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-12">
                                <label asp-for="PhotoDescription" class="col-form-label">Description</label>
                                <input asp-for="PhotoDescription" class="form-control" />
                                <span asp-validation-for="PhotoDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>


            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function readURL(input) {
          if (input.files && input.files[0]) {
            var reader = new FileReader();

              reader.onload = function (e) {

                  $('#imgThumbnail').attr('src', e.target.result).parent("div").show();
            }

            reader.readAsDataURL(input.files[0]);
          }
        }

        $("#vehicleImage").change(function() {
          readURL(this);
        });
    </script>
}