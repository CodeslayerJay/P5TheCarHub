@model RepairFormModel
@{
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="pt-4">
    <h4 class="text-center">Add Repair</h4>

    <div class="row pt-3">
        <div class="col-8 m-auto card pt-3">
            <form method="post" asp-action="Create" asp-controller="Repairs">
                <input asp-for="CarId" type="hidden" value="@Model.CarId" />
                <input asp-for="CarFullName" type="hidden" />

                <div class="form-row pt-1">
                    <div class="col-8">
                        <h5 class="text-muted pt-1 pb-3">@Model.CarFullName</h5>
                    </div>
                    <div class="col-4 float-right">
                        <p class="text-muted">* - denotes required fields.</p>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group col-md-7">
                        <label asp-for="Name" class="col-form-label">Repair Name*</label>
                        <input asp-for="Name" class="form-control form-control-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label asp-for="Cost" class="col-form-label">Repair Cost*</label>
                        <input asp-for="Cost" class="form-control form-control-sm" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="RepairDate" class="col-form-label">Repair Date*</label>
                        <input asp-for="RepairDate" class="form-control form-control-sm" type="date" />
                        <span asp-validation-for="RepairDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <label asp-for="Details" class="col-form-label">Details</label>
                    <textarea asp-for="Details" class="form-text form-control" rows="4"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <hr />
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="AddRepair" class="col-form-label">
                            <input asp-for="AddRepair" class="form-check-inline" /> Add another repair?
                        </label>
                    </div>
                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Add Repair</button>
                        <a asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId" class="btn">Cancel</a>
                    </div>
                 </div>   
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
