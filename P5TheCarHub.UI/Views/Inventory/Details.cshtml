@model InventoryDetailViewModel
@{
    ViewData["Title"] = Model.Car.FullCarName;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Inventory">Inventory</a></li>
        <li class="breadcrumb-item active" aria-current="page">Vehicle Details</li>
    </ol>
</nav>

<div class="row">
    <div class="col-12 row section-area">
        <div class="col-5">
            <!-- LEFT CONTENT-->

            @if (Model.Car.Photos.Count() > 1)
            {
                <div id="carousel-controls" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="@Model.Car.MainPhoto.ImageUrl" class="d-block w-100" style="height: 490px" data-interval="10000">
                        </div>
                        @foreach (var photo in Model.Car.Photos)
                        {
                            <div class="carousel-item">
                                <img src="@photo.ImageUrl" class="d-block w-100" style="height: 490px" data-interval="10000">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carousel-controls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-controls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            }
            else if (Model.Car.Photos.Count() > 0)
            {
                <img src="@Model.Car.MainPhoto.ImageUrl" class="d-block w-100" style="height: 490px;">
            }
            else
            {

                <img src="~/img/car-suv-blank.png" class="d-block w-100" style="height: 490px;">
            }

        </div>
        <!-- RIGHT CONTENT -->
        <div class="col-6 p-3 ml-5" style="border: 1px solid #ccc;">
            <h4>@Model.Car.FullCarName</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">VIN</dt>
                <dd class="col-sm-9">@Model.Car.VIN</dd>

                <dt class="col-sm-3">Mileage</dt>
                <dd class="col-sm-9">@Model.Car.Mileage.ToString("N0")</dd>

                <dt class="col-sm-3">Color</dt>
                <dd class="col-sm-9">@Model.Car.Color</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Car.Type</dd>

                <dt class="col-sm-3">Lot Date</dt>
                <dd class="col-sm-9">@Model.Car.LotDate.ToShortDateString()</dd>
            </dl>
            @if (Model.Car.IsSold)
            {
                <h3>SOLD</h3>
            } else
            {
                <h3>@Model.Car.SalePrice.ToString("c")</h3>
            }
            <br/>

            <a asp-action="Contact" asp-controller="Home" asp-route-vehicleId="@Model.Car.CarId" class="btn btn-primary btn-wide">
                Contact Us
            </a>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            
            $('.carousel').carousel()
        });
    </script>
}